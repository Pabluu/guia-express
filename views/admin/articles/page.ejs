<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homenavbar.ejs') %>

<body>
  <div class="container">
    <% if(result != '') {%>
    <% result.articles.rows.forEach(article => {%>
    <div class="card">
      <div class="card-header">
        <h2><%=article.title%></h2>
      </div>
      <div class="card-body">
        <a href="/<%= article.slug%>" class="btn btn-success">Ler Artigo</a>
      </div>
    </div><br>
    <% }) %>
    <% } else {%>
    <h2 style="text-align: center; font-weight: bold; text-transform: uppercase;">Nenhum artigo referente a categoria</h2>
    <% } %>
  </div>
</body>

<%- include('../../partials/footer.ejs') %>